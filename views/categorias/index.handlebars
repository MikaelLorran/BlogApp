<h1>Categorias:</h1>

{{#each categorias}}
    <a href="/categorias/{{slug}}" class="text-decoration-none">
        <div class="card shadow-sm rounded mt-4 hover">
            <div class="card-body">
                <div class="row">
                    <div class="col-10">
                        <h2 class="fs-5">{{nome}}</h2>
                    </div>
                    <div class="col-2 text-end px-3">
                        <p>Total de postagens: {{numeroDePostagens}}</p>
                    </div>
                </div>
            </div>
        </div>
    </a>

{{else}}

{{/each}}
