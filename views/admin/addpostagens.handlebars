    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}

<h1>Nova postagem</h1>
<div class="card">
    <div class="card-body">
        <form action="/admin/postagens/nova" method="POST">
            <div class="mb-3">
                <label for="titulo" class="form-label">Título:</label>
                <input type="text" class="form-control" id="titulo" name="titulo" required>
            </div>
            <div class="mb-3">
                <label for="slug" class="form-label">Slug:</label>
                <input type="text" class="form-control" id="slug" name="slug" required>
            </div>
            <div class="mb-3">
                <label for="descricao" class="form-label">Descrição:</label>
                <input type="text" class="form-control" id="descricao" name="descricao" required>
            </div>
            <div class="mb-3">
                <label for="conteudo" class="form-label">Conteúdo:</label>
                <textarea type="text" class="form-control" id="conteudo" name="conteudo" required></textarea>
            </div>
            <div class="mb-5">
                <label for="categoria" class="form-label">Categoria:</label>
                <select name="categoria" class="form-select">
                    {{#each categorias}}
                        <option value="{{_id}}">{{nome}}</option>
                    {{else}}
                        <option value="0">Nenhuma categoria registrada</option>
                    {{/each}}
                </select>
            </div>
            <button type="submit" class="btn btn-success">Criar postagem</button>
        </form>
    </div>
</div>