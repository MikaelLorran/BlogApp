<h1>Editar postagem</h1>
<div class="card">
    <div class="card-body">
        <form action="/admin/postagem/edit" method="POST">
            <input type="hidden" value="{{postagem._id}}" name="id">
            <div class="mb-3">
                <label for="titulo" class="form-label">Título:</label>
                <input type="text" class="form-control" id="titulo" name="titulo" value="{{postagem.titulo}}" required>
            </div>
            <div class="mb-3">
                <label for="slug" class="form-label">Slug:</label>
                <input type="text" class="form-control" id="slug" name="slug" value="{{postagem.slug}}" required>
            </div>
            <div class="mb-3">
                <label for="descricao" class="form-label">Descrição:</label>
                <input type="text" class="form-control" id="descricao" name="descricao" value="{{postagem.descricao}}" required>
            </div>
            <div class="mb-3">
                <label for="conteudo" class="form-label">Conteúdo:</label>
                <textarea type="text" class="form-control" id="conteudo" name="conteudo" required>{{postagem.conteudo}}</textarea>
            </div>
            <div class="mb-5">
                <label for="categoria" class="form-label">Categoria:</label>
                <select name="categoria" class="form-select">
                    {{#each categorias}}
                        <option value="{{_id}}">{{nome}}</option>
                    {{else}}
                        <option value="0">Nenhuma categoria registrada</option>
                    {{/each}}
                </select>
            </div>
            <button type="submit" class="btn btn-success">Confirmar</button>
            <a href="/admin/postagens"><button type="button" class="btn btn-danger">Cancelar</button></a>
        </form>
    </div>
</div>